{
  "name": "500-new-tabs-build",
  "private": true,
  "version": "1.8.1",
  "type": "module",
  "scripts": {
    "start": "vite build --sourcemap",
    "build": "vite build",
    "test": "vitest --globals run",
    "testmon": "vitest --globals",
    "coverage": "vitest run --coverage",
    "test_ff": "cross-env TARGET=firefox vite build && web-ext --source-dir=dist run",
    "build_ff": "cross-env TARGET=firefox vite build && web-ext --overwrite-dest --source-dir=dist build",
    "sign_test_ff": "dotenv -- web-ext sign --source-dir=dist --channel=unlisted",
    "sign_ff": "dotenv -- web-ext sign --source-dir=dist --channel=listed"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.16",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "jsdom": "^27.3.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "web-ext": "^9.2.0",
    "wxt": "^0.20.13"
  }
}
